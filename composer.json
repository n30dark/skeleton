{
    "name": "tfc/tfclog",
    "type": "library",
    "description": "TFC Logging System",
    "keywords": [
        "tfc",
        "tfclog",
        "tfclogger"
    ],
    "homepage": "https://github.com/tfc/tfclog",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergio Paulino",
            "email": "sergio.paulino@thefirstclub.com",
            "homepage": "https://github.com/n30dark",
            "role": "Head of Development"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "tfc\\tfclog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tfc\\tfclog\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
